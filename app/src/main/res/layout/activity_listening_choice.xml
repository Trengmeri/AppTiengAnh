<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.question_data.ListeningChoiceActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lis"
        android:textColor="#CE9566"
        android:textSize="36sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <!-- Thanh tiến trình -->
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Step 1 (Active) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#C4865E"
            android:layout_margin="4dp" />

        <!-- Step 2 (Inactive) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"
            android:layout_margin="4dp" />

        <!-- Step 3 (Inactive) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"
            android:layout_margin="4dp" />

        <!-- Step 4 (Inactive) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"
            android:layout_margin="4dp" />

        <!-- Step 5 (Inactive) -->
        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="#E0E0E0"
            android:layout_margin="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="@dimen/dp_16"
        android:drawableLeft="@drawable/grommet_icons_assist_listening"
        android:drawablePadding="5dp"
        android:text="@string/listen_rewrite"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btnListen"
                android:layout_width="330dp"
                android:layout_height="224dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/listening" />

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/dp_16"
                android:drawableLeft="@drawable/fe_question"
                android:textSize="24sp"
                android:textStyle="bold" />

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:columnCount="2"
                android:rowCount="2"
                android:columnOrderPreserved="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOption1"
                    style="@style/Text_Button_All"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="25dp"
                    android:background="@drawable/button_background"
                    android:text=""
                    android:textColor="@color/black"/>
                <!--            android:text="computer" />-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOption2"
                    style="@style/Text_Button_All"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="25dp"
                    android:text=""
                    android:background="@drawable/button_background"
                    android:textColor="@color/black"/>
                <!--            android:text="internet" />-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOption3"
                    style="@style/Text_Button_All"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="25dp"
                    android:text=""
                    android:background="@drawable/button_background"
                    android:textColor="@color/black"/>
                <!--            android:text="database" />-->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnOption4"
                    style="@style/Text_Button_All"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="25dp"
                    android:text=""
                    android:background="@drawable/button_background"
                    android:textColor="@color/black"/>
                <!--            android:text="operator" />-->
            </GridLayout>

            <Button
                android:id="@+id/btnCheckResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check"
                android:backgroundTint="#BC6136"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:id="@+id/popupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />
</LinearLayout>