<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DicussionActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:textSize="25sp"
            android:layout_marginStart="@dimen/dp_16"
            android:text="Discussion"
            android:drawablePadding="@dimen/dp_30"
            android:textStyle="bold"
            android:drawableStart="@drawable/icon_back"
            android:textColor="@color/black"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16">
            <!-- Avatar -->
            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_numlesson"/>

            <!-- Nội dung bình luận -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <!-- Tên user + Đánh giá -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Nội dung bình luận -->
                <TextView
                    android:id="@+id/txtContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Discussion content here..."
                    android:textColor="#545454"
                    android:textSize="13sp"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:layout_marginTop="5dp"/>

                <!-- Like + Thời gian -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/btnLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/like_selector"/>

                    <TextView
                        android:id="@+id/txtLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:text="123"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp40"
                        android:textStyle="bold"
                        android:text="2 replies"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/txtCreatedAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp40"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="2 weeks ago"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@drawable/icon_reply">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">
                <!-- Avatar -->
                <ImageView
                    android:id="@+id/imgAvatar1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_numlesson"/>

                <!-- Nội dung bình luận -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <!-- Tên user + Đánh giá -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtUser1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Nội dung bình luận -->
                    <TextView
                        android:id="@+id/txtContent1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discussion content here..."
                        android:textColor="#545454"
                        android:textSize="13sp"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginTop="5dp"/>

                    <!-- Like + Thời gian -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/btnLike1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/like_selector"/>

                        <TextView
                            android:id="@+id/txtLikeCount1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:text="123"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp40"
                            android:textStyle="bold"
                            android:text="2 replies"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:id="@+id/txtCreatedAt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp40"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="2 weeks ago"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_30"
                android:background="@drawable/icon_reply">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16">
                <!-- Avatar -->
                <ImageView
                    android:id="@+id/imgAvatar2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_numlesson"/>

                <!-- Nội dung bình luận -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <!-- Tên user + Đánh giá -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtUser2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="User Name"
                            android:textStyle="bold"
                            android:textSize="17sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Nội dung bình luận -->
                    <TextView
                        android:id="@+id/txtContent2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Discussion content here..."
                        android:textColor="#545454"
                        android:textSize="13sp"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:layout_marginTop="5dp"/>

                    <!-- Like + Thời gian -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/btnLike2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/like_selector"/>

                        <TextView
                            android:id="@+id/txtLikeCount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:textStyle="bold"
                            android:text="123"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp40"
                            android:textStyle="bold"
                            android:text="2 replies"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:id="@+id/txtCreatedAt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp40"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:text="2 weeks ago"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/border_bg">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_numlesson"
                    android:layout_gravity="center"
                    />

                <EditText
                    android:id="@+id/edtReviewSubject"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:hint="Write a review" />

                <ImageView
                    android:id="@+id/btSendReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_send" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>