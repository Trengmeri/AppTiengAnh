<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Text_Button_All">
        <item name="android:textSize">@dimen/size_button_all</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="Button_Active_All" parent="Text_Button_All">
        <item name="android:background">@drawable/bg_choose</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginEnd">@dimen/dp_60</item>
        <item name="paddingEnd">@dimen/dp_30</item>
        <item name="paddingStart">@dimen/dp_30</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/dp40</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>
    <style name="Answer_Multi_style">
        <item name="android:textSize">@dimen/size_button_all</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/colorDefault</item>
        <item name="android:layout_marginStart">@dimen/dp_16</item>
        <item name="android:layout_marginEnd">@dimen/dp_16</item>
        <item name="android:layout_marginTop">@dimen/margin_all</item>
    </style>

</resources>